<h3> Sign Up </h3>

<%= form_for @user, url: signup_path do |f| %>
  <div class="input-field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true %>
  </div>
  <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Sign Up"%>
<% end %>